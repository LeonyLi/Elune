<?xml version="1.0" encoding="utf-8" ?>
<app>
    <!-- database connection information -->
    <database>
        <!-- main database use mysql -->
        <mysql>
            <host>localhost</host>
            <port>3306</port>
            <user>mysql_username</user>
            <pass>mysql_pass</pass>
        </mysql>
        <!-- cache database use redis -->
        <redis>
            <host>localhost</host>
            <port>6379</port>
            <!-- leave blank if no auth required -->
            <pass></pass>
        </redis>
    </database>
</app>
